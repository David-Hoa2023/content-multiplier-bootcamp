{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd backend && npm ci && cd ../frontend && npm ci && npm run build"
  },
  "deploy": {
    "startCommand": "bash start.sh",
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 10
  }
}